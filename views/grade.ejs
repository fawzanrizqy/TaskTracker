<!doctype html>
<html lang="en">

<head>
  <title>Home</title>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

  <!-- Bootstrap CSS v5.2.1 -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous">

</head>

<body>
  <header>
    <%- include('navbar-mentor') %>
  </header>
  <main>
    <div class="container-fluid">

        <div class="container">
        <h3><%= data.name %> Grading</h3>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>No</th>
                    <th>Student Name</th>
                    <th>CheckPoints</th>
                    <th>Grade</th>
                </tr>
            </thead>
            <form action="/mentors/tasks/grade/<%= data.id %>" method="post">
            <tbody>
                <% data.TaskStudents.forEach((elem,index) => { %>
                 <tr>
                    <td><%= index+1 %></td>
                    <td><%= elem.User.Profile.name %></td>
                    <td>
                        <%= elem.TaskCheckpoints.map(el=>{return el.statusShow}).join(", ") %>
                    </td>
                    <td>
                        <input type="hidden" name="idTS" value="<%= elem.id %>">
                        <input type="hidden" name="StudentId" value="<%= elem.StudentId %>">
                        <input type="number" class="form-control" name="grade" value="<%= elem.grade===0? 0:elem.grade%>">
                    </td>
                 </tr>
                <% }) %>

            </tbody>
        </table>
        
        </div>
        <button id="btn-submit" name="btn-submit" type="submit" class="btn btn-primary float-end">save</button>
    </form>
    </div>

  </main>
  <footer>
    <!-- place footer here -->
  </footer>
  <!-- Bootstrap JavaScript Libraries -->
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"
    integrity="sha384-oBqDVmMz9ATKxIep9tiCxS/Z9fNfEXiDAYTujMAeBAsjFuCZSmKbSSUnQlmh/jp3" crossorigin="anonymous">
  </script>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.min.js"
    integrity="sha384-7VPbUDkoPSGFnVtYi0QogXtr74QeVeeIs99Qfg5YCF+TidwNdjvaKZX19NZ/e6oz" crossorigin="anonymous">
  </script>
</body>

</html>