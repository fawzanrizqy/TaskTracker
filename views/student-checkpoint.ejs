<!doctype html>
<html lang="en">

<head>
  <title>Task CheckPoint</title>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

  <!-- Bootstrap CSS v5.2.1 -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous">

</head>

<body>
  <header>
    <%- include('navbar-student') %>
  </header>
  <main>
    <div class="container-fluid">

        <div class="container">

            <a href="/students" class="btn btn-primary float-end">Back</a>
        <h3>Assignment : <%= detailTask.name %></h3>
        <br>
        <div class="row pt-4">
            
                <% data.forEach((elem,index) => { %>
                    <% if (!elem.status) { %>
                    <div class="col-4">
                      <div class="card text-bg-dark mb-3" style="max-width: 18rem;">
                        <div class="card-header">Checkpoint <%= index+1 %></div>
                        <div class="card-body">
                          <h5 class="card-title"><%= elem.cp %></h5>
                          <a href="/students/CP/<%= elem.id %>/done" class="btn btn-sm btn-light card-link float-end">Done</a>
                        </div>
                      </div>
                      </div>
                      <% } %>
                <% }) %>
        </div>



        <div class="row pt-4">
                <% data.forEach((elem,index) => { %>
                    <% if (elem.status) { %>
                        <div class="col-4">
                      <div class="card text-bg-success mb-3" style="max-width: 18rem;">
                        <div class="card-header">Checkpoint</div>
                        <div class="card-body">
                          <h5 class="card-title"><%= elem.cp %> <strong>done</strong></h5>
                        </div>
                      </div>
                        </div>
                      <% } %>
                <% }) %>
    </div>


    
    </div>
    
    </div>
  </main>
  <footer>
    <!-- place footer here -->
  </footer>
  <!-- Bootstrap JavaScript Libraries -->
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"
    integrity="sha384-oBqDVmMz9ATKxIep9tiCxS/Z9fNfEXiDAYTujMAeBAsjFuCZSmKbSSUnQlmh/jp3" crossorigin="anonymous">
  </script>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.min.js"
    integrity="sha384-7VPbUDkoPSGFnVtYi0QogXtr74QeVeeIs99Qfg5YCF+TidwNdjvaKZX19NZ/e6oz" crossorigin="anonymous">
  </script>
</body>

</html>